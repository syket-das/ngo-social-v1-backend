// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type Address {
  excat   String?
  city    String?
  state   String?
  country String?
  zipCode String?
  lat     String?
  lng     String?
}

type Media {
  key String
  url String
}

enum Role {
  USER
  NGO
  MODERATOR
  ADMIN
}

model User {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  fullName   String
  email      String    @unique
  password   String?
  phone      String?
  address    Address?
  active     Boolean   @default(true)
  otp        Int?
  verified   Boolean   @default(false)
  verifiedAt DateTime?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  role       Role      @default(USER)
}

model ngo {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  name       String
  type       String
  email      String    @unique
  password   String?
  phone      String
  address    Address
  active     Boolean   @default(true)
  otp        Int?
  verified   Boolean   @default(false)
  verifiedAt DateTime?
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  role       Role      @default(NGO)
}
